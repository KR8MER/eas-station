# Flask application configuration
FLASK_ENV=production
FLASK_APP=app.py
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
SECRET_KEY=change-me-in-production

# PostgreSQL connection details (connecting to HOST PostgreSQL, not Docker)
# Use host.docker.internal to connect to host machine from Docker containers
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_DB=casaos
POSTGRES_USER=casaos
POSTGRES_PASSWORD=casaos
DATABASE_URL=postgresql+psycopg2://casaos:casaos@host.docker.internal:5432/casaos

# CAP poller settings
POLL_INTERVAL_SEC=180
CAP_TIMEOUT=30

# Application specific paths
UPLOAD_FOLDER=/app/uploads
LOG_FILE=logs/noaa_alerts.log

# Optional LED sign configuration (update with your LED sign details)
LED_SIGN_IP=192.168.1.100
LED_SIGN_PORT=10001
